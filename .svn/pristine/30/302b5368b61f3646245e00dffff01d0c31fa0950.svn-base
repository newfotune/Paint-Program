package model;

import java.awt.Color;
import java.awt.Shape;
/**
 * This is the shapes to be saved.
 * @author n4tunec@uw.edu.
 * @version winter 2015.
 *
 */
public class DrawnShapes {

    /** The shape to be saved.*/
    private final Shape myShape;
    
    /** The color of shape to be saved.*/
    private final Color myColor;
    
    /** The thickness of the shape to be saved.*/
    private final float myThickness;
    
    /**
     * The constructor initializes the properties of the shape.
     * @param theShape the shape of the shape.
     * @param theColor the color of the shape.
     * @param theThickness the thickness of the shape,
     */
    public DrawnShapes(final Shape theShape, final Color theColor, final float theThickness) {
        myShape = theShape;
        myColor = theColor;
        myThickness = theThickness;
    }
    
    /**
     * returns the shape saved.
     * @return the type of shape.
     */
    public Shape getShape() {
        return myShape;
    }
    
    /**
     * returns the color of the shape saved.
     * @return the color of shape.
     */
    public Color getColor() {
        return myColor;   
    }
    
    /**
     * returns the thickness of the shape saved.
     * @return the thickness of shape.
     */
    public float getThickness() {
        return myThickness;
    }

}
