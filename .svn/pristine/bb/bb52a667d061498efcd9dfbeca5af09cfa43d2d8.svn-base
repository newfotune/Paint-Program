package model;

import java.awt.Shape;

/**
 * My Shape interface.
 * 
 * @author n4tunec@uw.edu
 * @version winter 2015.
 */
public interface DrawingTool {
    /** Gets the shape being drawn.
     * @return the shape.
     */
    Shape getShape();

    /**
     * creates the shape with the specified starting point.
     * 
     * @param theStartX the starting x position of the shape.
     * @param theStartY the starting y position of the shape.
     * @return the new shape drawn with the starting coordinates argument.
     */
    Shape startingPoint(final int theStartX, final int theStartY);

    /**
     * creates the shape with the specified ending point.
     * 
     * @param theEndX the ending x position of the shape.
     * @param theEndY the ending y position of the shape.
     * @return the new shape drawn with the ending coordinates argument.
     */
    Shape endingPoint(final int theEndX, final int theEndY);

    /**
     * creates the shape with the specified ending point.
     * 
     * @param theFinalX the ending x position of the shape.
     * @param theFinalY the ending y position of the shape.
     * @return the new shape drawn with the ending coordinates argument.
     */
    Shape finalPoint(final int theFinalX, final int theFinalY);
}
